@model tenorchem.Models.PurchaseRecord

@{
    ViewData["Title"] = "Create";
}

<h2>Create Purchase Record</h2>

<form asp-action="Create" id="myForm">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProductId" class="col-md-2 control-label">Product</label>
            <div class="col-md-10">
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SupplierId" class="col-md-2 control-label">Supplier</label>
            <div class="col-md-10">
                <select asp-for="SupplierId" class ="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PurchaseDate" class="col-md-2 control-label">Purchase Date</label>
            <div class="col-md-10">
                <input asp-for="PurchaseDate" class="form-control" type="date" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PricePerTon" class="col-md-2 control-label">Unit Price (AUD)</label>
            <div class="col-md-10">
                <input asp-for="PricePerTon" id="pricePerTon" class="form-control" type="number" placeholder="E.g  5.2" />
                <span asp-validation-for="PricePerTon" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="col-md-2 control-label">Quantity (Ton)</label>
            <div class="col-md-10">
                <input asp-for="Quantity" id="quantity" class="form-control" type="number" placeholder=""/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalPaidPrice" class="col-md-2 control-label">Total Price (AUD)</label>
            <div class="col-md-10">
                <input asp-for="TotalPaidPrice" id="totalPrice" class="form-control" type="number" />
                <span asp-validation-for="TotalPaidPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="comment" class="col-md-2 control-label">Extra Inofrmation</label>
            <div class="col-md-10">
                <input asp-for="comment" class="form-control" placeholder=""/>
                <span asp-validation-for="comment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<script>
    $("#myForm :input").change(function(){
        var tonPrice = $("#pricePerTon").val();
        var quan = $("#quantity").val();
        var totalPrice = tonPrice * quan;
        $("#totalPrice").val(totalPrice);
    });
</script>
